{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "lib": ["ES2021", "DOM"],
    "outDir": "dist",
    "removeComments": true,
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "types": ["@idajs/types"],
    "typeRoots": ["./node_modules/@types", "./node_modules"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": ["node_modules"]
}
